<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3">

    <ImageView
        android:id="@+id/roulette"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/roulette_view" />

    <ImageView
        android:id="@+id/button_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="-50dp"
        app:layout_constraintEnd_toEndOf="@+id/roulette"
        app:layout_constraintStart_toStartOf="@+id/roulette"
        app:layout_constraintTop_toTopOf="@+id/roulette"
        app:srcCompat="@drawable/button_view" />

    <ImageView
        android:id="@+id/spin_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/roulette"
        app:layout_constraintEnd_toEndOf="@+id/roulette"
        app:layout_constraintStart_toStartOf="@+id/roulette"
        app:layout_constraintTop_toTopOf="@+id/roulette"
        app:srcCompat="@drawable/spin_btn" />

    <ImageView
        android:id="@+id/you_view"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/you_view" />

    <ImageView
        android:id="@+id/bot_view"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bot_view" />

    <TextView
        android:id="@+id/youScore"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="15dp"
        android:text="0"
        android:textColor="#106E04"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/you_view"
        app:layout_constraintEnd_toEndOf="@+id/you_view"
        app:layout_constraintTop_toTopOf="@+id/you_view"
        app:layout_constraintVertical_bias="0.8"
        tools:text="18" />

    <TextView
        android:id="@+id/botScore"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="15dp"
        android:text="0"
        android:textColor="#121111"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bot_view"
        app:layout_constraintEnd_toEndOf="@+id/bot_view"
        app:layout_constraintTop_toTopOf="@+id/bot_view"
        app:layout_constraintVertical_bias="0.8"
        tools:text="2" />

    <TextView
        android:id="@+id/textSpin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spin the wheel"
        android:textAllCaps="true"
        android:textColor="#FFC107"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roulette" />

</androidx.constraintlayout.widget.ConstraintLayout>